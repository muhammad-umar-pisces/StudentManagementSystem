<p id="notice"><%= notice %></p>

<h1>Metrics</h1>
<%= link_to "Home", students_path %>
<table>
  <thead>
    <tr>
      <th>Math</th>
      <th>Physics</th>
      <th>Chemistry</th>
      <th>Biology</th>
      <th>Computer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.Math %></td>
        <td><%= metric.Physics %></td>
        <td><%= metric.Chemistry %></td>
        <td><%= metric.Biology %></td>
        <td><%= metric.Computer %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metric', new_metric_path %>
